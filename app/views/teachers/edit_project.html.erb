<div class="row">
      <div class="span12">
        <div class="widget widget-nopad">
          <div class="widget-header"><i class="icon-list-alt"></i>
            <h3> Επεξεργασία πτυχιακής </h3>
          </div>
          <!-- /widget-header -->
          <div class="widget-content">
            <br/>
            <%= form_for @project, url: project_path(@project) , html: {id: "new-project", class: "form-horizontal"} do |project| %>
                <fieldset>


                  <div class="control-group">
                    <%= project.label :title,t('projects.title'), class: "control-label"  %>
                    <div class="controls">
                      <%= project.text_field :title, rows: 30 %><br/>
                    </div>
                  </div>
                  <div class="control-group">
                    <%= project.label :description, t('projects.description'), class: "control-label"  %>
                    <div class="controls">
                      <%= project.cktext_area :description, :ckeditor => {:language => 'el-GR', :toolbar => 'mini'} %><br/>
                    </div>
                  </div>
                  <div class="control-group">
                    <%= project.label :skills_required,t('projects.skills_required'), class: "control-label"  %>
                    <div class="controls">
                      <%= project.text_field :skills_required %><br/>
                    </div>
                  </div>
                  <div class="control-group">
                    <%= project.label :keywords,t('projects.keywords'), class: "control-label" %>
                    <div class="controls">
                      <%= project.text_field :keywords %><br/>
                    </div>
                  </div>

                  <div class="control-group">
                    <%= project.label :start_date, t('projects.start_date'), class: "control-label" %>
                    <div class="controls" id="calendar">
                      <%= project.text_field :start_date, class: "input-calendar", data: { provide: "datepicker" } %><br/>
                    </div>
                  </div>

                  <div class="form-actions right">
                    <%= project.submit "Αποθηκευση", class: "btn btn-primary" %>
                  </div>
                </fieldset>
            <% end %>

          </div>
          <!-- /widget-content -->
        </div>
        <!-- /widget -->
      </div>

      <!-- /span6 -->
    </div>
    <!-- /row -->

    <br/>
    <br/>

