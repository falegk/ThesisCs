<div class="row">
  <div class="span6">
    <div class="widget">
      <div class="widget-header"> <i class="icon-file"></i>
        <h3> Εκδήλωσαν ενδιαφέρον</h3>
      </div>
      <!-- /widget-header -->
      <div class="widget-content">
        <ul class="messages_layout">

       <% @projectsCurrentTeacher.each do |d| %>

        <li class="from_user">
            <div class="message_wrap"> <span class="arrow"></span>
              <div class="info"><%= link_to d.title, project_path(d), class: "name" %><span class="time">2 Days ago</span>
                <div class="options_arrow">
                  <div class="dropdown pull-right"> <a class="dropdown-toggle " id="dLabel" role="button" data-toggle="dropdown" data-target="#" href="#"> <i class=" icon-caret-down"></i> </a>
                    <ul class="dropdown-menu " role="menu" aria-labelledby="dLabel">
                      <li><%= link_to 'Edit',  teacher_edit_project_path(current_user.teacher ,d), class: 'icon-edit icon-large' %></li>
                      <li><a href="#"><i class=" icon-trash icon-large"></i> Delete</a></li>
                    </ul>
                  </div>
                </div>
              </div>
              <div class="text">
                <span><%= ProjectAssignment.where(given: false, project_id: d).count %> φοιτητές έχουν εκδηλώσει ενδιαφέρον για την πτυχιακή</span>
                <p><% ProjectAssignment.where(given: false, project_id: d).each do |h| %>
                      <%= link_to "#{h.student.user.last_name} #{h.student.user.first_name}",  profile_student_path(h.student)  %>,
                  <% end %>
                </p>
              </div>
            </div>
          </li>
        <% end %>
        </ul>
      </div>
      <!-- /widget-content -->
    </div>
  </div>

  <div class="span6">
    <div class="widget">
      <div class="widget-header"> <i class="icon-file"></i>
        <h3> Ενεργές πτυχιακές </h3>
      </div>
      <!-- /widget-header -->
      <div class="widget-content">
        <ul class="messages_layout">

          <% @activeProjectsOfCurrentTeacher.each do |d| %>

              <li class="from_user">
                <div class="message_wrap"> <span class="arrow"></span>
                  <div class="info"><%= link_to d.title, project_path(d), class: "name" %><span class="time">2 Days ago</span>
                    <div class="options_arrow">
                      <div class="dropdown pull-right"> <a class="dropdown-toggle " id="dLabel" role="button" data-toggle="dropdown" data-target="#" href="#"> <i class=" icon-caret-down"></i> </a>
                        <ul class="dropdown-menu " role="menu" aria-labelledby="dLabel">
                          <li><%= link_to ' Ολοκλήρωση & Αρχείο', '' , class: 'icon-archive icon-large' %></li>
                          <li><%= link_to ' Επεξεργασία',  teacher_edit_project_path(current_user.teacher ,d), class: 'icon-edit icon-large' %></li>
                          <li><%= link_to ' Διαγραφή', '' , class: 'icon-trash icon-large' %></li>
                        </ul>
                      </div>
                    </div>
                  </div>
                  <div class="text">
                    <% students = ProjectAssignment.where(given: true, project_id: d) %>
                    <span> <%= 'Η πτυχιακή έχει δοθεί στους φοιτητές' if students.count > 1  %>  </span>
                    <p><% students.each do |h| %>
                          <% if students.count == 1 %>
                              <span>Η πτυχιακή έχει δοθεί στον φοιτητή </span>
                              <%= link_to "#{h.student.user.last_name} #{h.student.user.first_name}",  profile_student_path(h.student)  %>
                          <% else %>
                              <%= link_to "#{h.student.user.last_name} #{h.student.user.first_name}",  profile_student_path(h.student)  %> -
                          <% end %>
                      <% end %>
                    </p>
                  </div>
                </div>
              </li>
          <% end %>
        </ul>
      </div>
      <!-- /widget-content -->
    </div>
  </div>
</div>