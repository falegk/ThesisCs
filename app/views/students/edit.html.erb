<div class="row">

  <div class="span12">
    <div class="widget widget-nopad">
      <div class="widget-header"> <i class="icon-list-alt"></i>
        <h3> Επεξεργασία στοιχείων </h3>
      </div>
      <!-- /widget-header -->
      <div class="widget-content">
        <br/>
        <%= form_for @user, url: user_path(@user) , html: {id: "edit-profile", class: "form-horizontal"} do |user| %>
            <fieldset>
            <%= user.fields_for :student do |s|  %>
                  <div class="control-group">
                    <%= s.label :department , class: "control-label"  %>
                    <div class="controls">
                    <%= s.select :department,[['Μηχανικών πληροφορικής Τ.Ε','Μηχανικών πληροφορικής Τ.Ε']],
                                 {:prompt => "Επιλέξτε τμήμα"},
                                 {class: "form-control", required: "requires", width: 3 }%><br/>
                    </div>
                  </div>
                  <div class="control-group">
                    <%= s.label :phone , class: "control-label"  %>
                    <div class="controls">
                        <%= s.text_field :phone %> <i>Εμφάνιση μόνο σε καθηγητές </i><br/>
                    </div>
                  </div>
                  <div class="control-group">
                    <%= s.label :am, 'Αριθμός μητρώου', class: "control-label" %>
                    <div class="controls">
                    <%= s.text_field :am %> <i>Εμφάνιση μόνο σε καθηγητές </i> <br/>
                    </div>
                  </div>
                  <div class="control-group">
                    <%= s.label :skills, class: "control-label" %>
                    <div class="controls">
                    <%= s.text_field :skills %><br/>
                    </div>
                  </div>

            <% end %>

              <div class="form-actions right">
                <%= user.submit "Αποθηκευση", class: "btn btn-primary" %>
              </div>
              </fieldset>
        <% end %>
      </div>
      <!-- /widget-content -->
    </div>
    <!-- /widget -->
  </div>
  <!-- /span6 -->
</div>
<!-- /row -->

<br/>
<br/>

